Index: debian_fdm/GNUmakefile
===================================================================
--- debian_fdm.orig/GNUmakefile	2008-04-15 23:58:30.000000000 +0200
+++ debian_fdm/GNUmakefile	2008-04-15 23:58:38.000000000 +0200
@@ -99,8 +99,8 @@
 
 install:
 	$(INSTALLBIN) $(PROG) $(DESTDIR)$(PREFIX)/bin/$(PROG)
-	$(INSTALLMAN) $(PROG).1 $(DESTDIR)$(PREFIX)/man/man1/$(PROG).1
-	$(INSTALLMAN) $(PROG).conf.5 $(DESTDIR)$(PREFIX)/man/man5/$(PROG).conf.5
+	$(INSTALLMAN) $(PROG).1 $(DESTDIR)$(PREFIX)/share/man/man1/$(PROG).1
